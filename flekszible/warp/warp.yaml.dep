apiVersion: apps/v1
kind: Deployment
metadata:
  name: warp
  labels:
    app: minio
    component: warp
spec:
  replicas: 1
  selector:
    matchLabels:
      app: minio
      component: warp
  template:
    metadata:
      labels:
        app: minio
        component: warp
    spec:
        restartPolicy: OnFailure
        containers:
        - name: warp
          image: "minio/warp"
          args:
            - put
            - --access-key=root
            - --secret-key=WELCOME1
            - --host=ozone-s3g-0.ozone-s3g:9878
#            - --host=minio-0.minio:9000
